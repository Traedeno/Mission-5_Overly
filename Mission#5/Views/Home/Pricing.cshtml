@{
    ViewData["Title"] = "Pricing Calculator";
}
<h1>@ViewData["Title"]</h1>

<p>This page is going to help you understand my pricing regarding Fortnite Coaching.</p>

<div>
    <label for="hours">Number of Hours:</label>
    <input type="number" id="hours" min="0" step="1">
    <span class="error" id="hours-error"></span>
</div>
<div>
    <label>Hourly Rate:</label>
    <input type="text" id="hourly-rate" value="$30" readonly>
</div>
<div>
    <button id="calculate-btn">Calculate Total</button>
</div>
<div>
    <label>Total:</label>
    <span id="total"></span>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#calculate-btn').click(function () {
                var hours = parseFloat($('#hours').val());

                // Validation: Check if hours is a positive number
                if (isNaN(hours) || hours <= 0) {
                    $('#hours-error').text('Please enter a positive number of hours.');
                    return;
                } else {
                    $('#hours-error').text('');
                }

                var hourlyRate = parseFloat($('#hourly-rate').val().replace('$', ''));
                var total = hours * hourlyRate;

                $('#total').text('$' + total.toFixed(2));
            });
        });
    </script>
}